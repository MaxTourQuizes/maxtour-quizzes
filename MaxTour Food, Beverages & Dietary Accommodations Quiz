                        <div class="menu-grid">
                            <div class="menu-item">üèîÔ∏è <strong>Grand Canyon</strong> - Guano Point, Sky View, Skywalk Cafe</div>
                            <div class="menu-item">üåµ <strong>Death Valley</strong> - The Ranch at Death Valley</div>
                            <div class="menu-item">ü•™ <strong>Subway</strong> - Full menu options</div>
                            <div class="menu-item">üçï <strong>Williams, AZ</strong> - Various restaurant options</div>
                        </div>
                        <p><strong>Benefit:</strong> Guests can review options for dietary restrictions, allergies, or preferences</p>
                    </div>
                </div>
            </div>

            <div class="nav-buttons">
                <button class="btn btn-secondary" id="prevBtn" onclick="changeQuestion(-1)">Previous</button>
                <button class="btn btn-primary" id="nextBtn" onclick="nextQuestion()">Next</button>
            </div>
        </div>

        <div class="results" id="results">
            <h2>üéâ Quiz Complete!</h2>
            <div class="score-circle" id="scoreCircle">
                <span id="scoreText"></span>
            </div>
            <h3 id="scoreMessage"></h3>
            <p id="scoreDetails"></p>
            
            <div class="food-reference">
                <h4>üçΩÔ∏è Complete Food & Beverage Reference Guide</h4>
                
                <div class="tour-section">
                    <h5>üèîÔ∏è Grand Canyon West & Sleep-In Tours</h5>
                    <div class="meal-info">
                        <div class="meal-detail"><strong>Breakfast:</strong> Muffins, bananas, Starbucks iced mocha</div>
                        <div class="meal-detail"><strong>Lunch:</strong> Subway (recommended), Guano Point Cafe, Sky View Restaurant, Skywalk Cafe</div>
                    </div>
                </div>

                <div class="tour-section">
                    <h5>üåµ Death Valley Tours</h5>
                    <div class="meal-info">
                        <div class="meal-detail"><strong>Breakfast:</strong> Muffins, bananas, juice</div>
                        <div class="meal-detail"><strong>Lunch:</strong> Guests purchase own (The Ranch at Death Valley)</div>
                    </div>
                </div>

                <div class="tour-section">
                    <h5>üåä Hoover Dam Tours</h5>
                    <div class="meal-info">
                        <div class="meal-detail"><strong>Breakfast:</strong> None provided</div>
                        <div class="meal-detail"><strong>Lunch:</strong> None provided</div>
                    </div>
                </div>

                <div class="tour-section">
                    <h5>üèúÔ∏è Antelope Canyon Day Tour</h5>
                    <div class="meal-info">
                        <div class="meal-detail"><strong>Breakfast:</strong> None provided</div>
                        <div class="meal-detail"><strong>Lunch:</strong> Fried Chicken Sandwich OR Veggie Burrito (Page, AZ)</div>
                    </div>
                </div>

                <div class="tour-section">
                    <h5>üèïÔ∏è 2-Day Tours</h5>
                    <div class="meal-info">
                        <div class="meal-detail"><strong>Day 1:</strong> Simple breakfast (muffins, bananas, juice)</div>
                        <div class="meal-detail"><strong>Day 2:</strong> Hotel continental breakfast</div>
                        <div class="meal-detail"><strong>Lunches/Dinners:</strong> Not included</div>
                    </div>
                </div>

                <div class="tour-section">
                    <h5>üóª 3-Day Tours</h5>
                    <div class="meal-info">
                        <div class="meal-detail"><strong>Day 1:</strong> No breakfast, lunch at Deep Creek</div>
                        <div class="meal-detail"><strong>Day 2:</strong> Hotel breakfast, lunch in Page, dinner included</div>
                        <div class="meal-detail"><strong>Day 3:</strong> Hotel breakfast, lunch not included</div>
                    </div>
                </div>

                <div style="background: #e3f2fd; padding: 15px; border-radius: 8px; margin-top: 20px;">
                    <p><strong>üç∫ Universal Inclusions on ALL Tours:</strong></p>
                    <p><span class="meal-badge">Beverages</span> Water, sparkling water, soda, juice packs (unlimited)</p>
                    <p><span class="meal-badge">Snacks</span> Chips, granola bars, Welch's fruit snacks (unlimited)</p>
                    <p><span class="meal-badge">Guest Food</span> Welcome to bring their own food and drinks</p>
                    <p><span class="meal-badge">Menus</span> Links available for all restaurant options</p>
                </div>
            </div>
            
            <button class="btn restart-btn" onclick="restartQuiz()">Take Quiz Again</button>
        </div>
    </div>

    <script>
        let currentQuestion = 1;
        const totalQuestions = 12;
        let userAnswers = {};
        let correctAnswers = {
            1: 'b', 2: 'b', 3: 'b', 4: 'c', 5: 'b', 6: 'b',
            7: 'c', 8: 'b', 9: 'b', 10: 'b', 11: 'c', 12: 'b'
        };

        function updateQuestionCounter() {
            document.getElementById('questionCount').textContent = `Question ${currentQuestion} of ${totalQuestions}`;
        }

        function showQuestion(questionNum) {
            document.querySelectorAll('.question').forEach(q => {
                q.classList.remove('active');
            });
            document.querySelector(`[data-question="${questionNum}"]`).classList.add('active');
            updateQuestionCounter();
            updateNavButtons();
        }

        function updateNavButtons() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            prevBtn.style.display = currentQuestion === 1 ? 'none' : 'block';
            
            if (currentQuestion === totalQuestions) {
                nextBtn.textContent = 'Finish Quiz';
                nextBtn.onclick = finishQuiz;
            } else {
                nextBtn.textContent = 'Next';
                nextBtn.onclick = nextQuestion;
            }
        }

        function nextQuestion() {
            const currentQuestionDiv = document.querySelector(`[data-question="${currentQuestion}"]`);
            const selectedOption = currentQuestionDiv.querySelector('.option.selected');
            
            if (!selectedOption) {
                alert('Please select an answer before continuing.');
                return;
            }
            
            if (currentQuestion < totalQuestions) {
                currentQuestion++;
                showQuestion(currentQuestion);
            }
        }

        function changeQuestion(direction) {
            currentQuestion += direction;
            if (currentQuestion < 1) currentQuestion = 1;
            if (currentQuestion > totalQuestions) currentQuestion = totalQuestions;
            showQuestion(currentQuestion);
        }

        function finishQuiz() {
            const currentQuestionDiv = document.querySelector(`[data-question="${currentQuestion}"]`);
            const selectedOption = currentQuestionDiv.querySelector('.option.selected');
            
            if (!selectedOption) {
                alert('Please select an answer before finishing the quiz.');
                return;
            }
            
            calculateScore();
        }

        function calculateScore() {
            let correctCount = 0;
            
            for (let i = 1; i <= totalQuestions; i++) {
                if (userAnswers[i] === correctAnswers[i]) {
                    correctCount++;
                }
            }
            
            const percentage = Math.round((correctCount / totalQuestions) * 100);
            displayResults(correctCount, percentage);
        }

        function displayResults(correctCount, percentage) {
            document.querySelector('.quiz-content').style.display = 'none';
            const results = document.getElementById('results');
            results.classList.add('show');
            
            const scoreCircle = document.getElementById('scoreCircle');
            const scoreText = document.getElementById('scoreText');
            const scoreMessage = document.getElementById('scoreMessage');
            const scoreDetails = document.getElementById('scoreDetails');
            
            scoreText.textContent = `${percentage}%`;
            scoreDetails.textContent = `You answered ${correctCount} out of ${totalQuestions} questions correctly.`;
            
            if (percentage >= 90) {
                scoreCircle.className = 'score-circle score-excellent';
                scoreMessage.textContent = 'Excellent! You know MaxTour\'s food offerings perfectly!';
            } else if (percentage >= 75) {
                scoreCircle.className = 'score-circle score-good';
                scoreMessage.textContent = 'Good job! Review the tours where you missed questions.';
            } else {
                scoreCircle.className = 'score-circle score-needs-improvement';
                scoreMessage.textContent = 'Study the food offerings for each tour type before helping guests.';
            }
        }

        function restartQuiz() {
            currentQuestion = 1;
            userAnswers = {};
            
            // Reset all options
            document.querySelectorAll('.option').forEach(option => {
                option.classList.remove('selected', 'correct', 'incorrect');
            });
            
            // Hide all explanations
            document.querySelectorAll('.explanation').forEach(exp => {
                exp.classList.remove('show');
            });
            
            // Show quiz content and hide results
            document.querySelector('.quiz-content').style.display = 'block';
            document.getElementById('results').classList.remove('show');
            
            showQuestion(1);
        }

        // Handle option selection
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('option')) {
                const questionDiv = e.target.closest('.question');
                const questionNum = parseInt(questionDiv.dataset.question);
                
                // Remove previous selection
                questionDiv.querySelectorAll('.option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                
                // Add selection to clicked option
                e.target.classList.add('selected');
                
                // Store user answer
                userAnswers[questionNum] = e.target.dataset.answer;
                
                // Show explanation after a short delay
                setTimeout(() => {
                    showExplanation(questionNum);
                }, 300);
            }
        });

        function showExplanation(questionNum) {
            const questionDiv = document.querySelector(`[data-question="${questionNum}"]`);
            const explanation = questionDiv.querySelector('.explanation');
            const correctAnswer = correctAnswers[questionNum];
            const userAnswer = userAnswers[questionNum];
            
            // Highlight correct and incorrect answers
            questionDiv.querySelectorAll('.option').forEach(option => {
                if (option.dataset.answer === correctAnswer) {
                    option.classList.add('correct');
                } else if (option.dataset.answer === userAnswer && userAnswer !== correctAnswer) {
                    option.classList.add('incorrect');
                }
            });
            
            explanation.classList.add('show');
        }

        // Initialize
        updateNavButtons();
    </script>
</body>
</html>
